  <script type="text/javascript">
  window.onload = function () {
    $('.btn-nav-home').addClass('active')
  }
  $(function () {
    var $list
    var $boxLista = $(".list-home-eventos .row")
    var control = null

    $.ajax({
      url: hostApi+'/evento/lista',
      cache: true,
    }).done(function (e) {
      (e.dados).forEach(function (elem) {
        elem.imagem = hostApi+'/image/'+elem.imagem
        $boxLista.append(dir.cardEvento(elem))
      })
      $list = $(".card-evento")
    }).fail(function () {
      console.log('Error');
    })

    $(document).keydown(function(e){
      if (e.which === 37 || e.which === 39 || e.which === 27) {
        if (control === null) { /* Inicializa o focus nos cards */
          control = 0
          $list[control].focus()
        }else{

          if(e.which === 27){ /* Tecla ESC */
            $list[control].blur()

            return false
          }
          if(e.which === 37){ /* Tecla para esquerda */
            if ($list[control-1]) {
              control = control-1
              $list[control].focus()
            }

            return false
          }
          if(e.which === 39){ /* Tecla para direita */
            if ($list[control+1]) {
              control = control+1
              $list[control].focus()
            }

            return false
          }
        }
      }
    })
  })

  function cardMaisEventos() {
    var elem = $('.card-mais-eventos')

    elem.hasClass('active') ? elem.removeClass('active') : elem.addClass('active')
  }
